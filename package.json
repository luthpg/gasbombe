{
  "name": "@ciderjs/gasbombe",
  "version": "0.3.2",
  "description": "A TypeScript Project Generator for GoogleAppsScript, available as CLI",
  "type": "module",
  "main": "dist/index.cjs",
  "bin": {
    "gasbombe": "dist/cli.cjs"
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md",
    "README.ja.md"
  ],
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "jiti src/cli",
    "tsc": "tsgo --noEmit src",
    "check": "biome check --write",
    "generate": "jiti scripts/copyTemplates",
    "test": "vitest run --coverage",
    "build": "pnpm run tsc && pnpm run test --silent && unbuild && pnpm run generate"
  },
  "keywords": [
    "googleappsscript",
    "generator",
    "typescript",
    "react"
  ],
  "author": "ciderjs/luthpg",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/luthpg/gasbombe.git"
  },
  "bugs": {
    "url": "https://github.com/luthpg/gasbombe/issues"
  },
  "homepage": "https://github.com/luthpg/gasbombe#readme",
  "devDependencies": {
    "@biomejs/biome": "^2.3.13",
    "@inquirer/prompts": "^8.2.0",
    "@types/ejs": "^3.1.5",
    "@types/node": "^25.1.0",
    "@typescript/native-preview": "7.0.0-dev.20260130.1",
    "@vitest/coverage-v8": "4.0.18",
    "commander": "^14.0.3",
    "consola": "^3.4.2",
    "ejs": "^4.0.1",
    "glob": "^13.0.0",
    "jiti": "^2.6.1",
    "typescript": "^5.9.3",
    "unbuild": "^3.6.1",
    "vitest": "^4.0.18"
  },
  "peerDependencies": {
    "@inquirer/prompts": "^7",
    "commander": "^14",
    "consola": "^3",
    "ejs": "^3",
    "glob": "^11"
  }
}
