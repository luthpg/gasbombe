{
  "$schema": "https://biomejs.dev/schemas/<%= biomeVersion %>/schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "ignoreUnknown": false,
    "includes": [
      "src/**/*",
      "server/**/*",
      "tests/**/*",
      "types/**/*",
      "./*.ts",
      "./*.json"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double"
    }
  },
  "assist": {
    "enabled": true,
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  },
  "overrides": [
    {
      "includes": ["server/**/*"],
      "linter": {
        "rules": {
          "correctness": {
            "noUnusedVariables": "info"
          }
        }
      }
    }
  ]
}
